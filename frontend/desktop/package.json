{
  "name": "powerhouse-enterprise-desktop",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.cjs",
  "description": "Powerhouse Enterprise Desktop",
  "author": "Powerhouse AI",
  "license": "UNLICENSED",
  "scripts": {
    "clean": "powershell -NoProfile -ExecutionPolicy Bypass -Command \"Remove-Item -Recurse -Force dist -ErrorAction SilentlyContinue\"",
    "dist:win": "npm run clean && electron-builder --win --x64"
  },
  "devDependencies": {
    "electron": "31.7.7",
    "electron-builder": "24.13.3"
  },
  "build": {
    "appId": "com.powerhouse.enterprise",
    "productName": "Powerhouse Enterprise",
    "asar": true,
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "runtime",
        "to": "runtime",
        "filter": [
          "**/*",
          "!**/.env",
          "!**/.env.*"
        ]
      }
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "artifactName": "${productName}-Setup-${version}.exe"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true
    }
  }
}
