apiVersion: v1
kind: Secret
metadata:
  name: powerhouse-secrets
  namespace: powerhouse
type: Opaque
stringData:
  # Database
  DB_HOST: "postgres-service"
  DB_PORT: "5432"
  DB_USER: "postgres"
  DB_PASSWORD: "CHANGE_ME"
  DB_NAME: "powerhouse"
  
  # Redis
  REDIS_HOST: "redis-service"
  REDIS_PORT: "6379"
  REDIS_PASSWORD: "CHANGE_ME"
  
  # JWT
  SECRET_KEY: "CHANGE_ME_TO_RANDOM_SECRET_KEY"
  ALGORITHM: "HS256"
  
  # Sentry (optional)
  SENTRY_DSN: ""
  SENTRY_ENVIRONMENT: "production"
  
  # API Keys (optional)
  OPENAI_API_KEY: ""
  ANTHROPIC_API_KEY: ""

