# Powerhouse backend environment template
# Copy to .env and adjust values for your environment.

# Application
APP_NAME="Powerhouse Multi-Agent Platform"
API_HOST=0.0.0.0
API_PORT=8001
DEBUG=false
LOG_LEVEL=INFO

# Security
SECRET_KEY=change-me
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database
# Default to a local SQLite database for quick starts. Set DATABASE_URL to point
# to PostgreSQL in production (e.g. postgresql://user:pass@host:5432/dbname).
DATABASE_URL=sqlite:///./powerhouse.db
DB_HOST=localhost
DB_PORT=5434
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=powerhouse

# Redis (optional for caching)
REDIS_URL=redis://localhost:6379/0

# Frontend URL used in emails
FRONTEND_URL=http://localhost:3000
